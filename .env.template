# =============================================================================
# Smart-Cheques Platform Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment
# Never commit .env file to version control

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
# Environment mode: development, staging, production
ENV=development

# Application name and version
APP_NAME=smart-cheques-platform
APP_VERSION=1.0.0

# =============================================================================
# DATABASE CONFIGURATIONS
# =============================================================================

# PostgreSQL Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/smart_payment?sslmode=disable
POSTGRES_URL=postgres://user:password@localhost:5432/smart_payment?sslmode=disable

# PostgreSQL Connection Pool Settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=5m

# MongoDB Configuration
MONGO_URL=mongodb://admin:password@localhost:27017
MONGO_DATABASE=smart_payment

# MongoDB Connection Pool Settings
MONGO_MAX_POOL_SIZE=10
MONGO_MIN_POOL_SIZE=5

# =============================================================================
# REDIS CONFIGURATION (Message Queue & Caching)
# =============================================================================
REDIS_URL=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Connection Pool Settings
REDIS_MAX_IDLE=10
REDIS_IDLE_TIMEOUT=5m
REDIS_MAX_ACTIVE=0

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-at-least-32-characters-long
JWT_ACCESS_TOKEN_DURATION=15m
JWT_REFRESH_TOKEN_DURATION=24h

# =============================================================================
# XRPL (XRP Ledger) CONFIGURATION
# =============================================================================
# XRPL Network URLs
# MainNet: wss://s1.ripple.com
# TestNet: wss://s.altnet.rippletest.net:51233
XRPL_NETWORK_URL=wss://s.altnet.rippletest.net:51233
XRPL_TESTNET=true

# XRPL Fee Settings
XRPL_MAX_FEE_DROPS=100000
XRPL_BASE_FEE_DROPS=10

# =============================================================================
# ENCRYPTION & SECURITY
# =============================================================================
# AES-256 Encryption Key (32 characters/bytes)
ENCRYPTION_KEY=your-32-character-encryption-key-here
AES_ENCRYPTION_KEY=your-32-character-encryption-key-here

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================
# SMTP Server Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@smartcheques.com
SMTP_FROM_NAME=Smart-Cheques Platform

# Email Templates Base URL
EMAIL_BASE_URL=http://localhost:8000

# =============================================================================
# NOTIFICATION CONFIGURATIONS
# =============================================================================

# SendGrid Email Service (Alternative to SMTP)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@smartcheques.com
SENDGRID_FROM_NAME=Smart-Cheques Platform

# Twilio SMS Service
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# EXTERNAL API CONFIGURATIONS
# =============================================================================

# Oracle Services API Keys
ORACLE_API_KEY=your-oracle-api-key
ORACLE_API_SECRET=your-oracle-api-secret
ORACLE_BASE_URL=https://api.oracle-service.com

# Payment Gateway API Keys
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# KYC/AML Service
KYC_API_KEY=your-kyc-api-key
KYC_API_SECRET=your-kyc-api-secret
KYC_BASE_URL=https://api.kyc-service.com

# =============================================================================
# SERVICE PORTS & ENDPOINTS
# =============================================================================

# API Gateway
API_GATEWAY_PORT=8000
API_GATEWAY_HOST=localhost

# Identity Service
IDENTITY_SERVICE_PORT=8001
IDENTITY_SERVICE_HOST=localhost

# Orchestration Service
ORCHESTRATION_SERVICE_PORT=8002
ORCHESTRATION_SERVICE_HOST=localhost

# XRPL Service
XRPL_SERVICE_PORT=8003
XRPL_SERVICE_HOST=localhost

# Asset Gateway
ASSET_GATEWAY_PORT=8004
ASSET_GATEWAY_HOST=localhost

# Oracle Service
ORACLE_SERVICE_PORT=8080
ORACLE_SERVICE_HOST=localhost

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log Level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring & Observability
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# =============================================================================
# FRAUD PREVENTION & COMPLIANCE
# =============================================================================

# Fraud Detection Thresholds
FRAUD_RISK_THRESHOLD_HIGH=0.8
FRAUD_RISK_THRESHOLD_MEDIUM=0.5
FRAUD_SUSPICIOUS_ACTIVITY_WINDOW=24h

# Compliance Settings
COMPLIANCE_REPORT_INTERVAL=24h
COMPLIANCE_ALERT_EMAIL=compliance@smartcheques.com
COMPLIANCE_AUTO_FREEZE_THRESHOLD=0.9

# =============================================================================
# DEVELOPMENT & DEBUG SETTINGS
# =============================================================================

# Debug Mode
DEBUG=true
GIN_MODE=debug

# Test Database
TEST_DATABASE_URL=postgres://user:password@localhost:5434/smart_payment_test?sslmode=disable

# =============================================================================
# END OF CONFIGURATION
# =============================================================================

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase PostgreSQL Database URL
# Format: postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres?sslmode=require
POSTGRES_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres?sslmode=require

# Supabase Project Details
SUPABASE_PROJECT_REF=your-project-ref
SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase API Keys
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Supabase Database Password (separate from API keys)
SUPABASE_DB_PASSWORD=your-database-password

# Supabase Authentication
SUPABASE_JWT_SECRET=your-jwt-secret
SUPABASE_AUTH_EXTERNAL_REDIRECT_URL=http://localhost:3000/auth/callback

# Supabase Real-time Configuration
SUPABASE_REALTIME_ENABLED=true
SUPABASE_REALTIME_URL=wss://your-project-ref.supabase.co/realtime/v1

# Supabase Storage Configuration
SUPABASE_STORAGE_URL=https://your-project-ref.supabase.co/storage/v1
SUPABASE_STORAGE_BUCKET=smart-payment-documents

# Supabase Edge Functions (for production)
SUPABASE_EDGE_FUNCTIONS_URL=https://your-project-ref.supabase.co/functions/v1

# =============================================================================
# END OF SUPABASE CONFIGURATION
# =============================================================================

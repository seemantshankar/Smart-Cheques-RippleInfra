# Smart Payment Infrastructure Environment Configuration
# Copy this file to .env and update the values as needed

# Environment
ENV=development

# Database Configuration
POSTGRES_URL=postgres://user:password@localhost:5432/smart_payment?sslmode=disable
MONGO_URL=mongodb://admin:password@localhost:27017
REDIS_URL=redis://localhost:6379

# XRPL Configuration
XRPL_NETWORK_URL=https://s.altnet.rippletest.net:51234
XRPL_TESTNET=true

# Service Ports (for local development)
API_GATEWAY_PORT=8000
IDENTITY_SERVICE_PORT=8001
ORCHESTRATION_SERVICE_PORT=8002
XRPL_SERVICE_PORT=8003
ASSET_GATEWAY_PORT=8004

# Security (generate secure values for production)
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_DURATION=15m
JWT_REFRESH_TOKEN_DURATION=168h
ENCRYPTION_KEY=your-encryption-key-here

# External Services (to be configured later)
LLM_SERVICE_URL=
ORACLE_API_KEYS=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json